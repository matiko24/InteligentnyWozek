<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mateusz.inteligentnywozek">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_shopping_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShoppingListActivity"
            android:label="@string/title_activity_list_view"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mateusz.inteligentnywozek.MainActivity" />
        </activity>
        <activity
            android:name=".ProductsActivity"
            android:label="@string/title_add_product"
            android:parentActivityName=".ShoppingListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShoppingListActivity" />
        </activity>
        <activity
            android:name=".ProductsPreferencesActivity"
            android:label="@string/title_activity_products_preferences"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ShopsActivity"
            android:label="@string/title_activity_choose_shop"
            android:parentActivityName=".ShoppingListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShoppingListActivity" />
        </activity>
        <activity android:name=".ShopsPreferencesActivity"></activity>
    </application>

</manifest>
